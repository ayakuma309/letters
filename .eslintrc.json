{
  "env": {
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "sourceType": "module",
      "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["**/*.js"],
  "rules": {
      "@typescript-eslint/no-explicit-any": 1,
      "@typescript-eslint/no-non-null-assertion": 1
  },
  "root": true
}
